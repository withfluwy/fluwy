{
    "name": "@fluwy/ui",
    "version": "0.7.0",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package && npm run styles",
        "styles": "tailwindcss -i ./src/lib/styles.css -o ./dist/styles.css --minify",
        "preview": "vite preview",
        "package": "svelte-kit sync && svelte-package && publint",
        "release": "changeset publish",
        "prepublishOnly": "npm run build",
        "test:all": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint ./src",
        "lint:prettier": "prettier --check ./src",
        "test": "vitest",
        "test:integration": "playwright test",
        "test:integration:update": "playwright test --update-snapshots"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./tailwind": {
            "types": "./dist/integrations/tailwind/index.d.ts",
            "node": "./dist/integrations/tailwind/index.js"
        },
        "./styles.css": {
            "import": "./dist/styles.css",
            "require": "./dist/styles.css"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "peerDependencies": {
        "highlight.js": "^11.10.0",
        "svelte": "5.1.6"
    },
    "peerDependenciesMeta": {
        "highlight.js": {
            "optional": true
        },
        "marked-highlight": {
            "optional": true
        }
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.9",
        "@playwright/test": "^1.48.2",
        "@sveltejs/adapter-auto": "^3.3.1",
        "@sveltejs/kit": "^2.8.3",
        "@sveltejs/package": "^2.3.7",
        "@sveltejs/vite-plugin-svelte": "4.0.0",
        "@tailwindcss/typography": "^0.5.15",
        "@testing-library/svelte": "^5.2.4",
        "@types/color": "^4.2.0",
        "@types/dompurify": "^3.2.0",
        "@types/eslint": "^9.6.1",
        "@types/jsdom": "^21.1.7",
        "@types/lodash": "^4.17.13",
        "@types/node": "^22.9.0",
        "@vitest/coverage-istanbul": "^2.1.4",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.46.1",
        "globals": "^15.12.0",
        "highlight.js": "^11.10.0",
        "nock": "14.0.0-beta.7",
        "postcss": "^8.4.49",
        "prettier": "^3.4.1",
        "prettier-plugin-svelte": "^3.2.8",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "publint": "^0.2.12",
        "sass": "^1.80.7",
        "svelte": "5.4.0",
        "svelte-check": "^4.0.7",
        "tailwindcss": "^3.4.14",
        "tslib": "^2.8.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "8.14.0",
        "vite": "^5.4.11",
        "vitest": "^2.1.4"
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "dependencies": {
        "bits-ui": "^0.21.16",
        "clsx": "^2.1.1",
        "color": "^4.2.3",
        "dayjs": "^1.11.13",
        "dompurify": "^3.2.2",
        "hotkeys-js": "^3.13.7",
        "iconify-icon": "^2.1.0",
        "jsdom": "^25.0.1",
        "lodash": "^4.17.21",
        "marked": "^15.0.3",
        "mode-watcher": "^0.5.0",
        "svelte-sonner": "^0.3.28",
        "tailwind-merge": "^2.5.4",
        "yaml": "^2.6.0"
    },
    "packageManager": "pnpm@9.12.3"
}